@model presupuestario.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<h2 class="text-danger">Confirmar Eliminación</h2>
<hr />

<h3>¿Está seguro de que desea eliminar este producto?</h3>

<div class="alert alert-warning">
    Esta acción no se puede deshacer.
</div>

<dl class="row">
    <dt class="col-sm-2">ID:</dt>
    <dd class="col-sm-10">@Model.IdProducto</dd>

    <dt class="col-sm-2">Descripción:</dt>
    <dd class="col-sm-10">@Model.Descripcion</dd>

    <dt class="col-sm-2">Precio:</dt>
    <dd class="col-sm-10">@Model.Precio</dd>
</dl>

<form asp-action="Delete" method="post">

    <input type="hidden" asp-for="IdProducto" />

    <input type="submit" value="Confirmar Eliminación" class="btn btn-danger" />

    <a asp-action="Index" class="btn btn-secondary">Cancelar y Volver</a>
</form>